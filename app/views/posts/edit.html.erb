<% provide(:page_title, "Edit#post.title") %>

<div class="col-md-8 col-md-offset-2">
  <h1>Edit Post</h1>
  <%= simple_form_for @post, url: post_path  do |f| %>
  <%= f.input :title, label: "Post Title" %>
  <%= f.input :body %>
  <%= f.input :image, as: :file %>
  <%= f.button :submit %>
  <% end %>
</div>
